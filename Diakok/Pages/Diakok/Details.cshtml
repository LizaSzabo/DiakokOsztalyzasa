@page
@model Diakok.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Statisztikák</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Név
            </th>
            <th>
                Átlag
            </th>
            <th>
                Elégtelen osztályzatok száma
            </th>
            <th>
                Legjobb osztályzat
            </th>
   
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Diak)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nev)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Evfolyam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Szul_datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefon)
                </td>
               
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.DiakID">Osztalyzat hozzáadása</a>
                </td>
            </tr>
        }
    </tbody>
</table>

