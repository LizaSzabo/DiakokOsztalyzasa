@page
@model Diakok.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Diák Létrehozása</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label">Név:</label>
                <input asp-for="Student.Name" class="form-control" required/>
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Grade" class="control-label">Évfolyam:</label>
                <input asp-for="Student.Grade" class="form-control" min="1" max="13"/>
                <span asp-validation-for="Student.Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.BirthDate" class="control-label">Születési dátum:</label>
                <input asp-for="Student.BirthDate" class="form-control" type ="date" />
                <span asp-validation-for="Student.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Phone" class="control-label">Telefon:</label>
                <input asp-for="Student.Phone" class="form-control" type ="number" maxlength="15" minlength="4" />
                <span asp-validation-for="Student.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Létrehozás" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Vissza a diákok listájához</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
